<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kavach" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black_solid</item>
        <item name="colorOnPrimary">@color/black_solid</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/black_solid</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="maven_pro_regular_text_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/maven_pro_regular</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>
    <style name="poppins_semibold_text_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="maven_pro_semibold_text_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/maven_pro_semibold</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>


    <style name="maven_pro_medium_text_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/maven_pro_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>
    <style name="em_garamon_semibold_text_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/eb_garamon_semibold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>
    <style name="eb_garamon_regular_text_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/eb_garamond_regular</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>
    <style name="maven_pro_semibold_button_style_login" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/maven_pro_semibold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/_20sdp</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/_20sdp</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_4sdp</item>
    </style>
    <style name="shape_50">
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppTheme.MaterialDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>
</resources>