<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"

                android:endColor="@color/yellow_dark"

                android:startColor="@color/pink"
                android:type="linear" />

            <corners android:radius="@dimen/_8sdp"/>
        </shape>
    </item>
    <item
        android:bottom="@dimen/_1sdp"
        android:left="@dimen/_1sdp"
        android:right="@dimen/_1sdp"
        android:top="@dimen/_1sdp">
        <shape android:shape="rectangle" >
            <solid android:color="#56163F" />
            <corners android:radius="@dimen/_8sdp"/>
        </shape>
    </item>

</layer-list>